{
    "compilerOptions":{
        "allowJs": true,
        "target":"es2015",
        "module":"commonjs",
        "moduleResolution": "node",
        "pretty":true,
        "outDir": "./dist",
        "rootDir": "src",
        "types": ["node", "jest"],
        "typeRoots" : ["./node_modules/@types", "./src/@types"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts", 
        "src/**/*.js" 
    ],
    "exclude":[
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/*.spec.js"
    ]
}